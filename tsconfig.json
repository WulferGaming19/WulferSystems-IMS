{
    "compilerOptions": {
      "target": "ES2021",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "dist",
      "rootDir": ".", // Ist Root, damit index.ts im Main Ordner erkannt wird
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["index.ts", "src"]
}  